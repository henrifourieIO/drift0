{
  "tasks": {
    "build": "deno run --allow-read --allow-write --allow-run build.ts",
    "build:prod": "deno run --allow-read --allow-write --allow-run build.ts --production",
    "dev": "deno run --allow-net --allow-read --watch main.ts",
    "start": "deno run --allow-net --allow-read --allow-env main.ts",
    "test": "deno test --allow-net --allow-read",
    "docker:build": "docker build -t drift .",
    "docker:run": "docker run -p 8000:8000 drift"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/http": "jsr:@std/http@1",
    "react": "https://esm.sh/react@18.3.1",
    "react-dom": "https://esm.sh/react-dom@18.3.1/client"
  },
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react"
  }
}